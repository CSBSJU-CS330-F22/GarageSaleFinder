<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FFF6"
    tools:context=".SearchByLocation">

    <TextView
        android:id="@+id/locationName"
        android:layout_width="88dp"
        android:layout_height="28dp"
        android:text="Location:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/bodoni"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />


    <EditText
        android:id="@+id/inputLocation"
        android:layout_width="183dp"
        android:layout_height="50dp"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:hint="City"
        android:inputType="textPostalAddress"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputDate"
        android:layout_width="183dp"
        android:layout_height="50dp"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:hint="YYYY-MM-DD"
        android:inputType="textPostalAddress"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/locationName" />

    <TextView
        android:id="@+id/dateDate"
        android:layout_width="55dp"
        android:layout_height="27dp"
        android:text="Date:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/bodoni"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.399" />

    <TextView
        android:id="@+id/category"
        android:layout_width="87dp"
        android:layout_height="35dp"
        android:text="Category:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/bodoni"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.599" />

    <Button
        android:id="@+id/inputCategory"
        android:layout_width="183dp"
        android:layout_height="50dp"
        android:layout_marginLeft="28dp"
        android:background="@color/wales"
        android:fontFamily="@font/bodoni"
        android:textStyle="bold"
        android:ems="10"
        android:hint="Category"
        android:onClick="showCategoryChoices"
        android:padding="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintLeft_toRightOf="@id/category"
        app:layout_constraintTop_toTopOf="@id/category" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:fontFamily="@font/roastedchicken1"
        android:text="   Please enter at least "
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/desc2"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:fontFamily="@font/roastedchicken1"
        android:text="search criteria"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/btnSearchByLocation"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/wales"
        android:text="Search"
        android:textStyle="bold"
        android:fontFamily="@font/bodoni"
        app:layout_constraintBottom_toTopOf="@id/btnReturn"
        app:layout_constraintLeft_toLeftOf="@id/btnReturn" />

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="212dp"
        android:layout_height="49dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="595dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="50dp"
        android:background="@color/wales"
        android:onClick="goMenu"
        android:text="Back to Menu"
        android:fontFamily="@font/bodoni"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.594" />

